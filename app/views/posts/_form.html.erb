<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :post, label: "Post about it", :required => false, input_html: { maxlength: 300, class: "textarea", id: "textbox"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new post...", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-primary" %>
  <%= link_to 'Cancel', posts_path, class: "button is-light" if (params[:action] == 'edit') %>
  <span id="char_count" class="level-right">300/300</span>
<% end %>
